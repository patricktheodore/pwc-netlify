---
import Layout from '../layout/Layout.astro';
import ServiceGroup from '../components/ServiceGroup';

const siteURL = import.meta.env.PUBLIC_URL || "http://localhost:8888";
const response = await fetch(`${siteURL}/.netlify/functions/service-page`);
const data = await response.json();

const pageTitle = "Purified Group - Services | Reliable, Efficient, Sustainable Cleaning Services";
const metaTag = "Uncover a full spectrum of window cleaning and home/business services at Purified Group. Our skilled team delivers streak-free clarity and optimized solar performance for your property. Experience premier cleaning solutions tailored to Perth's needs. From residential to commercial, we've got you covered. Services include Window Cleaning, Solar Panel Maintenance, Gutter cleaning, Pressure Cleaning, and more.";
const url = "https://www.purifiedgroup.com.au/Services";
---

<Layout page={pageTitle} metaTag={metaTag} url={url}> 
  <div class="bg-white">
    <div class="relative">
      <img src={data.fields.primaryContentSection.fields.heroImage.fields.file.url} class="object-cover" />
      <div class="absolute inset-0 bg-gradient-to-t from-white"></div>
    </div>
    
    <div class="relative mx-auto -mt-12 max-w-7xl px-4 pb-16 sm:px-6 sm:pb-24 lg:px-8">
      <div class="mx-auto max-w-2xl text-center lg:max-w-4xl">
        <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">{data.fields.primaryContentSection.fields.imageTitle}</h2>
        <p class="mt-4 text-gray-500">{data.fields.primaryContentSection.fields.sectionHeadingColoredText}</p>
      </div>
      <ServiceGroup client:load services={data.fields.secondaryContentSection} callToAction={data.fields.tertiaryContentSection} />
    </div>

  </div>
</Layout>

